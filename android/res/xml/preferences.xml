<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <PreferenceCategory android:title="@string/prefs_category_general" >
        <ListPreference
            android:defaultValue="iso"
            android:dialogTitle="@string/prefs_units_dialog_title"
            android:entries="@array/prefs_units_entries"
            android:entryValues="@array/prefs_units_values"
            android:key="prefs_units_system"
            android:title="@string/prefs_units_title" />
        <ListPreference
            android:dialogTitle="@string/prefs_language_dialog_title"
            android:entries="@array/prefs_language_entries"
            android:entryValues="@array/prefs_language_values"
            android:key="prefs_language"
            android:title="@string/prefs_language_title" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/prefs_category_performance" >
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="prefs_follow_location_changes"
            android:summary="@string/prefs_follow_location_summary"
            android:title="@string/prefs_follow_location_title" />
    </PreferenceCategory>

</PreferenceScreen>