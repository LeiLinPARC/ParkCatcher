<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application themes, dependent on API level. These theme are replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices. -->
    <style name="AppBaseTheme" parent="@style/Theme.AppCompat" />

    <style name="LightBaseTheme" parent="@style/Theme.AppCompat.Light" />

    <style name="DialogBaseTheme" parent="@style/Theme.AppCompat.Dialog" />

    <!-- Define app colors -->
    <style name="AppTheme" parent="@style/AppBaseTheme">
        <item name="colorPrimary">@color/theme_primary</item>
        <item name="colorPrimaryDark">@color/theme_primary_dark</item>
        <item name="colorAccent">@color/theme_accent</item>
        <item name="colorControlActivated">@color/theme_primary_dark</item>
        <item name="windowActionBar">false</item>
    </style>

    <!-- The main style, with a background and toolbar arrowStyle -->
    <style name="AppTheme.Parking">
        <item name="android:windowBackground">@drawable/bg_big_logo</item>
        <item name="drawerArrowStyle">@style/MyDrawerArrowToggle</item>
    </style>

    <!-- Variant of the main AppTheme_Parking that does not include
    a background or drawerArrowStyle -->
    <style name="AppTheme.NoBackground" />

    <!-- Different colors for Forbidden parking Details -->
    <style name="AppTheme.Parking.Alert">
        <item name="colorPrimary">#ff0000</item>
        <item name="colorPrimaryDark">#990000</item>
    </style>

    <!-- LightTheme for EULA -->
    <style name="EulaTheme" parent="@style/LightBaseTheme">
        <item name="colorPrimary">@color/theme_primary</item>
        <item name="colorPrimaryDark">@color/theme_primary_dark</item>
        <item name="colorAccent">@color/theme_accent</item>
        <item name="windowActionBar">false</item>
    </style>

    <!-- Dialogs -->
    <style name="DialogTheme" parent="@style/DialogBaseTheme">
        <item name="colorPrimary">@color/theme_primary</item>
        <item name="colorPrimaryDark">@color/theme_primary_dark</item>
        <item name="colorAccent">@color/theme_accent</item>
    </style>

    <!--Toolbar-->
    <style name="ToolbarOverlayTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/theme_overlay_text</item>
        <item name="colorControlNormal">@color/theme_overlay_text</item>
    </style>

    <style name="ToolbarPopupOverlayTheme" parent="ThemeOverlay.AppCompat.Light" />

</resources>
