<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Eula -->
    <style name="EulaButton" parent="@style/ButtonAppTheme">
        <item name="android:textColor">@color/btn_text</item>
        <item name="android:textSize">@dimen/button_text</item>
    </style>

    <!-- Main -->
    <style name="LogoActionBar" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="displayOptions">showHome|useLogo</item>
    </style>

    <style name="NoConnectionTitle" parent="@android:style/TextAppearance.Medium">
        <item name="android:padding">@dimen/padding_normal</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/no_connection_text</item>
    </style>

    <style name="PlayservicesTitle" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_marginBottom">@dimen/padding_normal</item>
        <item name="android:textColor">@color/green</item>
    </style>

    <style name="DrawerTitle" parent="@android:style/TextAppearance.Small">
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:textColor">@color/drawer_text</item>
        <!--<item name="android:drawableLeft">@drawable/ic_parking</item>-->
        <item name="android:drawablePadding">32dp</item>
        <item name="android:paddingLeft">@dimen/keyline_1</item>
        <item name="android:paddingRight">@dimen/keyline_1</item>
    </style>

    <style name="DrawerTableRow">
        <item name="android:gravity">center</item>
        <!-- <item name="android:background">@color/drawer_background</item> -->
    </style>

    <style name="DrawerButton" parent="@style/ButtonAppTheme">
        <!--<item name="android:fontFamily" tools:ignore="NewApi">sans-serif-condensed</item>-->
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:textColor">@color/text_primary_light</item>
        <item name="android:textSize">14sp</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:gravity">center_horizontal|top</item>
    </style>

    <style name="DrawerLabel">
        <!--<item name="android:padding">@dimen/padding_normal</item>-->
        <item name="android:minWidth">70dp</item>
        <item name="android:textColor">@color/drawer_text</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="DrawerLabelLand" parent="@style/DrawerLabel">
        <item name="android:layout_gravity">center</item>
    </style>

    <!-- Dialogs -->
    <style name="DialogDuration">
        <item name="android:padding">@dimen/padding_normal</item>
    </style>

    <style name="DurationValue" parent="@android:style/TextAppearance.Medium">
        <item name="android:paddingBottom">@dimen/padding_normal</item>
    </style>

    <!-- Favorites -->
    <style name="FavoritesBox" parent="@style/TextContent">
        <item name="android:layout_margin">@dimen/padding_double</item>
        <item name="android:background">@color/background</item>
    </style>

    <style name="FavoritesList">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">@dimen/slider_drag_height</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:overScrollFooter">@null</item>
        <item name="android:divider">@color/transparent</item>
        <item name="android:dividerHeight">0dp</item>
    </style>

    <style name="FavoritesListItem">
        <item name="android:cacheColorHint">#660000</item>
        <!--<item name="android:background">@drawable/list_selector_favorites</item>-->
        <item name="android:minHeight">?android:attr/listPreferredItemHeight</item>
    </style>

    <style name="FavoritesListItemTitle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/listview_text_1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:drawableLeft">@drawable/ic_parking_allowed</item>
    </style>

    <!--<style name="FavoritesListItemSummary" parent="@android:style/TextAppearance.Small">-->
        <!--<item name="android:textColor">@color/listview_text_2</item>-->
