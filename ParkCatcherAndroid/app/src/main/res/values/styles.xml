    <!-- About -->
    <style name="TextContent">
        <item name="android:textSize">14sp</item>
        <item name="android:padding">@dimen/padding_double</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="AboutBox">
        <item name="android:background">@color/background</item>
        <item name="android:padding">@dimen/padding_double</item>
        <item name="android:layout_marginBottom">@dimen/padding_double</item>
    </style>

    <style name="AboutBoxText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/about_text</item>
        <item name="android:textColorLink">@color/hyperlink</item>
        <item name="android:focusableInTouchMode">false</item>
    </style>

    <style name="AboutBoxFooter">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/hyperlink</item>
        <item name="android:textColorLink">@color/hyperlink</item>
        <item name="android:focusableInTouchMode">false</item>
    </style>

    <!-- Help -->
    <style name="HelpBox" parent="@style/TextContent">
        <item name="android:layout_margin">@dimen/padding_double</item>
        <item name="android:background">@color/background</item>
    </style>

    <style name="HelpBoxText" parent="@style/AboutBoxText">
        <item name="android:drawablePadding">@dimen/padding_double</item>
    </style>

    <style name="HelpBoxTextSmall" parent="@android:style/TextAppearance.Small">
        <item name="android:drawablePadding">@dimen/padding_double</item>
        <item name="android:textColor">@color/about_text</item>
    </style>

    <style name="HelpImageArrow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/padding_normal</item>
        <item name="android:layout_marginBottom">@dimen/help_arrow_padding</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="CustomTitlePageIndicator">
        <item name="android:background">@color/indicator_bg</item>
        <!--<item name="footerColor">@color/green</item>-->
        <!--<item name="footerIndicatorStyle">triangle</item>-->
