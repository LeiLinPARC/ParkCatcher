        <!--<item name="android:textStyle">italic</item>-->
    <!--</style>-->

    <style name="FavoritesListItemDistance">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/listview_text_2</item>
        <item name="android:gravity">right</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
    </style>

    <style name="FavoritesListEmpty" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/listview_text_2</item>
        <item name="android:gravity">center</item>
        <item name="android:drawableBottom">@drawable/ic_action_star_on</item>
    </style>

    <!-- Post Details -->
    <style name="DetailsBox" parent="@style/TextContent">
        <item name="android:layout_margin">@dimen/padding_double</item>
        <item name="android:background">@color/background</item>
    </style>

    <style name="DetailsProgressAddress" parent="@android:style/TextAppearance.Small">
        <item name="android:paddingLeft">@dimen/padding_normal</item>
        <item name="android:textColor">@color/details_progress_address_text</item>
    </style>

    <style name="DetailsTitle" parent="@android:style/TextAppearance.Large">
        <item name="android:layout_marginBottom">@dimen/padding_normal</item>
        <item name="android:textColor">@color/green</item>
    </style>

